<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:snatch="https://github.com/arudenkun/Snatch">
    <SolidColorBrush x:Key="IncorrectInputBrush">Crimson</SolidColorBrush>
    <ControlTheme
        x:Key="{x:Type snatch:NumericTextBox}"
        TargetType="snatch:NumericTextBox">
        <Style Selector="^:incorrecttext">
            <Setter Property="Foreground" Value="{StaticResource IncorrectInputBrush}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>