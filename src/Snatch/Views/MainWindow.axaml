<shadui:Window
    x:Class="Snatch.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="using:ShadUI"
    xmlns:snatch="https://github.com/arudenkun/Snatch"
    Title="{x:Static snatch:AppHelper.Name}"
    Width="1366"
    Height="768"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    x:DataType="snatch:MainWindowViewModel"
    CanMaximize="True"
    CanResize="True"
    Icon="/Assets/favicon.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="{Binding AppearanceOptions.LastWindowState}"
    mc:Ignorable="d">
    <shadui:Window.Hosts>
        <shadui:DialogHost
            Manager="{Binding DialogManager}"
            Owner="{Binding RelativeSource={RelativeSource AncestorType=shadui:Window}}" />
        <shadui:ToastHost Manager="{Binding ToastManager}" />
    </shadui:Window.Hosts>
    <ContentControl Content="{Binding ContentViewModel}" />
</shadui:Window>