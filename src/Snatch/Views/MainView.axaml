<UserControl
    x:Class="Snatch.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="using:ShadUI"
    xmlns:snatch="https://github.com/arudenkun/Snatch"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="snatch:MainViewModel"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="Auto, *">
        <shadui:Sidebar
            Name="SideMenu"
            MinWidth="60"
            BorderBrush="{DynamicResource BorderColor30}"
            BorderThickness="0,0,1,0">
            <ItemsControl ItemsSource="{Binding Pages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="snatch:PageViewModel">
                        <shadui:SidebarItem
                            Command="{Binding $parent[snatch:MainView].DataContext.ChangePageCommand}"
                            CommandParameter="{Binding ViewModelType}"
                            Content="{Binding DisplayName}">
                            <shadui:SidebarItem.Icon>
                                <LucideIcon Kind="{Binding IconKind}" />
                            </shadui:SidebarItem.Icon>
                        </shadui:SidebarItem>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="4" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </shadui:Sidebar>
        <TransitioningContentControl
            Grid.Column="1"
            Content="{Binding Page}" />
    </Grid>
</UserControl>